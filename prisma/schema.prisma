generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Account {
  id             String   @id @default(auto()) @map("_id") @db.ObjectId
  email          String   @unique
  name           String?
  image          String?
  phone          String?
  role           UserRole
  hashedPassword String?
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}

model KOL {
  id          String     @id @default(auto()) @map("_id") @db.ObjectId
  age         Int?
  gender      Gender?
  location    Location?
  industries  Industry[]
  description String?
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
}

model Company {
  id          String     @id @default(auto()) @map("_id") @db.ObjectId
  location    Location[]
  industries  Industry[]
  address     String[]
  description String?
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
}

enum UserRole {
  kol
  company
}

enum Gender {
  male
  female
  lgbt
}

enum Location {
  hcm
  hn
  dn
}

enum Industry {
  food
  clothes
  cosmetology
  accessory
}
